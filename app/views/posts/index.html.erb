<ul>
  <% @posts.each do |post| %>
    <li>
      <h3>
        <%= post.content %>
      </h3>
      <p>
      <%= link_to 'Comment', new_post_comment_path(post) %> |
      <%= link_to 'Edit Tweet', edit_post_path(post) %> |
      <%= link_to 'View Tweet', post_path(post)%> |
      <%= link_to 'Delete', post, method: :delete %>
      <hr />

    </li>
  <% end %>
  <%= link_to 'Back', root_path %>

</ul>